<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><b><%= listing.title %></b></h3>
  </div>

  <div class="card col-7 offset-2">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
    <div class="card-body">
      <b>Owned By: <%= listing.owner%></b>
      <br>
      <%= listing.description %><br>
      &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
      <%= listing.location %><br>
      <%= listing.country %>
    </div>
  </div>
</div>

<!-- Buttons Section -->
<div class="row mt-4 mb-4">
  <div class="col-3 offset-2">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100">Edit</a>
  </div>
  <div class="col-3">
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger w-100">Delete</button>
    </form>
  </div>
  <br><br><br>
  <hr>
  <!-- Review -->
  <div class="card shadow-sm border-0 mt-4 col-md-6 offset-md-3">
  <div class="card-body">
    <h4 class="card-title mb-4 text-center">Leave a Review</h4>
    
    <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
      <!-- Rating Section -->
      <div class="mb-3 text-center">
        <label class="form-label fw-semibold d-block mb-2">Rating</label>

        <div id="starRating" class="mb-2">
          <i class="fa-regular fa-star fs-3 mx-1" data-value="1"></i>
          <i class="fa-regular fa-star fs-3 mx-1" data-value="2"></i>
          <i class="fa-regular fa-star fs-3 mx-1" data-value="3"></i>
          <i class="fa-regular fa-star fs-3 mx-1" data-value="4"></i>
          <i class="fa-regular fa-star fs-3 mx-1" data-value="5"></i>
        </div>
      
        <input type="hidden" name="review[rating]" id="ratingInput" value="0" />
      </div>

      <!-- Comment Section -->
      <div class="mb-3">
        <label for="comment" class="form-label fw-semibold">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="4"
          placeholder="Share your experience..."
          required
        ></textarea>
        <div class="invalid-feedback">Please add some feedback</div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-dark px-4 py-2 rounded-3">
          Submit Review
        </button>
        <br><br>
      </div>
    </form>
    <hr>
    
    <!-- all review section  -->
<hr class="my-4" />

<div class="container mt-5 mb-4">
  <h4 class="mb-4 text-center">⭐ Customer Reviews</h4>

  <% if (listing.reviews.length > 0) { %>
    <div class="row g-4 justify-content-center">
      <% listing.reviews.forEach((review, index) => { %>
        <div class="col-md-6">
          <div class="card border border-dark shadow-sm h-100">
            <div class="card-body">
              <!-- Rating Stars -->
              <div class="mb-2">
                <% for (let i = 1; i <= 5; i++) { %>
                  <% if (i <= review.rating) { %>
                    <i class="fa-solid fa-star text-warning"></i>
                  <% } else { %>
                    <i class="fa-regular fa-star text-muted"></i>
                  <% } %>
                <% } %>
              </div>

              <!-- Comment -->
              <p class="card-text fs-6"><%= review.comment %></p>

              <!-- Delete Button -->
              <form
                method="POST"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                onsubmit="return confirm('Are you sure you want to delete this review?');"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  <i class="fa-solid fa-trash"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>

        <% if ((index + 1) % 2 === 0) { %>
          <!-- Add row spacing after every two cards -->
          <div class="w-100 d-none d-md-block"></div>
        <% } %>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-secondary text-center col-md-6 offset-md-3">
      No reviews yet for this listing. Be the first to share your experience!
    </div>
  <% } %>
</div>

<hr class="my-4" />


<% 
  let total = 0;
  listing.reviews.forEach(r => total += r.rating);
  let avg = listing.reviews.length ? (total / listing.reviews.length).toFixed(1) : 0;
%>

<h5 class="text-center mb-3">
  ⭐ Average Rating: <span class="text-warning"><%= avg %></span> / 5
</h5>


<hr class="my-4" />

  </div>
</div>
<br><br>
</div>
    
