<% layout("/layouts/boilerplate") -%>

<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>All Listings</h3>
    <button class="btn btn-dark" id="openMapBtn">
      <i class="fa-solid fa-map"></i> View Map
    </button>
  </div>

  <!-- Listings Grid -->
  <div id="listingsGrid" class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col h-100">
          <img src="<%= listing.image.url %>" class="card-img-top">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

</div>

<!-- FULLSCREEN MAP OVERLAY -->
<div id="mapOverlay">
  <button id="closeMapBtn">
    <i class="fa-solid fa-xmark"></i>
  </button>

  <div id="index-map"
       data-listings='<%- listingsJSON %>'>
  </div>
</div>
